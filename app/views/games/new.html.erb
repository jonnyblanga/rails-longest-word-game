<h1>New Game</h1>


<% @grid.each do |letter| %>
  <i><%= letter %></i>
<% end %>
<p>What is the longest word you can find?</p>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <%= hidden_field_tag :start_time, Time.now %>

  <input type="text" name="attempt" placeholder="Type your attempt">
  <input type="submit" value="Play">

</form>
